@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ranking";
}

<div class="container">
    <header>
        <img class="banner-game" src="../img/banner.png" alt="">
    </header>
    <main>
        <div class="container">
            <button class="button pop" role="button" data-toggle="modal" data-target="#login-modal">Admin Zone</button>
            <button class="button pop">@Html.ActionLink("Voltar", "Index")</button>
            <table id="ranking" class="table table-responsive table-hover">
                <tr>
                    <td></td>
                    <td><img src="../img/loading.gif" /></td>
                    <td></td>
                </tr>
            </table>
        </div>
        <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" align="center">
                        <button id="close" type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                        <img class="banner" id="img_logo" src="../img/banner.png">
                    </div>

                    <div id="div-forms">
                        <div id="alert">                            
                        </div>
                        <form id="login-adm">
                            <div class="modal-body">
                                <div id="div-login-msg">
                                    <div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
                                    <span id="text-login-msg">Informe o login e senha de ADM</span>
                                </div>
                                <input id="username" class="form-control" type="email" placeholder="Login" required>
                                <input id="password" class="form-control" type="password" placeholder="Senha" required>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"> Lembrar?
                                    </label>
                                </div>
                                <button onclick="callLogin()" class="button menu">Autenticar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>


